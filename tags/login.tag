<login>
    <form id="login-form">
        <h2>Login</h2>
        <label>Username</label>
        <input type="text" name="username" minlength="4" maxlength="32" required><br>
        <label>Password</label>
        <input type="password" name="pass" minlength="8" maxlength="32" required><br>
        <button class="btn btn-block" type="submit">Login</button>
    </form>
</login>